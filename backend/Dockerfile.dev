# ─────────────────────────────────────────────────────────────────────────────
# MyCoach API — Dockerfile DÉVELOPPEMENT
# Hot-reload uvicorn, pas de build optimisé
# ─────────────────────────────────────────────────────────────────────────────

FROM python:3.12-slim

LABEL maintainer="MyCoach Team"
LABEL description="MyCoach FastAPI — image développement (hot-reload)"

# Évite les fichiers .pyc et buffers stdout/stderr
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app

WORKDIR /app

# Dépendances système (curl pour healthcheck, libpq pour asyncpg)
RUN apt-get update -q && \
    apt-get install -y --no-install-recommends \
        curl \
        libpq-dev \
        gcc \
    && rm -rf /var/lib/apt/lists/*

# Dépendances Python (copiées en premier pour bénéficier du cache Docker)
COPY requirements.txt requirements-dev.txt ./
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r requirements-dev.txt

# Le code source est monté via volume (hot-reload) — pas besoin de COPY ici

# Crée les répertoires nécessaires
RUN mkdir -p /app/uploads /app/logs

# Port exposé
EXPOSE 8000

# Entrypoint : migrations + démarrage avec hot-reload
CMD ["sh", "-c", \
    "echo '>>> Running Alembic migrations...' && \
     alembic upgrade head && \
     echo '>>> Starting FastAPI with hot-reload...' && \
     uvicorn app.main:app \
       --host 0.0.0.0 \
       --port 8000 \
       --reload \
       --reload-dir /app/app \
       --log-level debug"]
